<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:drawable="@drawable/playy">


        <shape android:shape="oval">
            <solid android:color="#0093E9"/>
            <stroke android:width="2dp" android:color="#000000" android:dashGap="5dp" android:dashWidth="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true" android:drawable="@drawable/playy">
        <shape android:shape="oval">
            <solid android:color="#0093E9" />
            <stroke android:width="7dp" android:color="#000000" />
        </shape>
    </item>
</selector>