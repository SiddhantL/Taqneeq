<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blackgradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blackgradient">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_blue_light"
            android:text="BOOK NOW"
            android:textColor="@android:color/background_light"
            android:visibility="visible" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/button"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/item_info"
                    android:layout_below="@+id/rlayout"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_info8"
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/item_info"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/foodlef" />

                    <ImageView
                        android:id="@+id/item_info5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/item_info"
                        android:layout_toEndOf="@+id/item_info7"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/alcohollef" />

                    <ImageView
                        android:id="@+id/item_info7"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignStart="@+id/item_info8"
                        android:layout_alignTop="@+id/item_info"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/foodlefwhite" />

                    <ImageView
                        android:id="@+id/item_info6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/rlayout"
                        android:layout_toStartOf="@+id/item_info7"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/adultlefwhite" />

                    <ImageView
                        android:id="@+id/item_info"
                        android:layout_width="34dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/item_info6"
                        android:layout_toStartOf="@+id/item_info6"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/musiclef" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/category"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/relativecircular"
                    android:fontFamily="@font/montserrat"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/text"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/eventpic"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/galaxy"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewpager"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat"
                    android:text="Linux Kernel"
                    android:textColor="@color/white"
                    android:textSize="36dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/map"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Category"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@id/textView20"
                    tools:context="com.example.siddhantlad.taqneeq.EventDisplay" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Venue"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textView12"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@+id/divider7"
                    android:background="@drawable/like" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@+id/divider7"
                    android:layout_below="@+id/textView12"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/share" />

                <View
                    android:id="@+id/divider6"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/textView12"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="108dp"
                    android:background="?android:attr/listDivider" />

                <RelativeLayout
                    android:id="@+id/rlayout"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button11"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/relativecirculardisplayblack"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/coinlef"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Cost:"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Date:"
                        android:textColor="#000"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t2"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Time:"
                        android:textColor="#000"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t3"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Day:"
                        android:textColor="#000"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView19"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat"
                    android:text="ABC"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <View
                    android:id="@+id/divider7"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:background="?android:attr/listDivider" />

                <CheckBox
                    android:id="@+id/c3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/textView4"
                    android:layout_toLeftOf="@+id/divider7"
                    android:buttonTint="@color/white"
                    android:clickable="false"
                    android:drawableRight="@drawable/foodlefwhite" />

                <CheckBox
                    android:id="@+id/c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/divider7"
                    android:buttonTint="@color/white"
                    android:clickable="false"
                    android:drawableRight="@drawable/whiteadultlef" />

                <CheckBox
                    android:id="@+id/c4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="false"
                    android:layout_toRightOf="@+id/c1"
                    android:buttonTint="@color/white"
                    android:clickable="false"
                    android:drawableRight="@drawable/musiclef" />

                <CheckBox
                    android:id="@+id/c2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="false"
                    android:layout_toLeftOf="@+id/c3"
                    android:buttonTint="@color/white"
                    android:clickable="false"
                    android:drawableRight="@drawable/alcohollef" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>