<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    android:elevation="10dp"
    android:background="#ffffff">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl2">
    <ImageView
        android:id="@+id/item_images"
        android:layout_width="185dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/itemimage" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_images"
        android:layout_centerHorizontal="true"
        android:text="Item Title"
        android:paddingLeft="5dp"
        android:textColor="#000"
        android:layout_alignParentLeft="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_title"
        android:paddingLeft="5dp"
        android:text="Item Title"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/item_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_date"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/coinlef"
        android:paddingLeft="5dp"
        android:text="Item Title"
        android:textColor="#08B3B9"
        android:textSize="16sp"
        android:visibility="visible" />
</RelativeLayout>

    <TextView
        android:id="@+id/item_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/rl2"
        android:layout_centerHorizontal="false"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:text="Item Title"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>